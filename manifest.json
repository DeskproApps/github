{
  "name": "@deskpro-apps/github",
  "title": "GitHub",
  "description": "View your GitHub issues from Deskpro and link them to tickets you are working on",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/github",
  "version": "1.0.24",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{
    "target": "ticket_sidebar",
    "entrypoint": "index.html",
    "options": {
      "actions": {
        "linkTicket": {
          "type": "ticket_addition",
          "title": "GitHub Issue",
          "description": "Link ticket to a GitHub issue"
        }
      }
    }
  }],
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    },
    "client_secret": {
      "title": "Client secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true
    }
  },
  "entityAssociations": {
    "linkedGithubIssue": {
      "title": "Linked Github Issue",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://api.github.com/.*",
      "methods": ["GET", "POST", "PATCH", "PUT"],
      "timeout": 10
    }, {
      "url": "https://github.com/.*",
      "methods": ["GET", "POST"],
      "timeout": 10
    }]
  }
}
