{
  "name": "@deskpro-apps/github",
  "title": "GitHub",
  "description": "This application adds support for viewing and creating GitHub issues.",
  "version": "1.0.0",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{
    "target": "ticket_sidebar",
    "entrypoint": "index.html"
  }],
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    },
    "client_secret": {
      "title": "Client secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    }
  },
  "entityAssociations": {
    "linkedGithubIssue": {
      "title": "Linked Github Issue",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://api.github.com/.*",
      "methods": ["GET", "POST", "PATCH"],
      "timeout": 10
    }]
  }
}
